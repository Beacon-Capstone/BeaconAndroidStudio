<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Event Management">
        <SwitchPreference
            android:id="@+id/wifiBool"
            android:defaultValue="false"
            android:key="wifiBool"
            android:summary="This will only download new events over wifi."
            android:title="Wifi download only" />
        <ListPreference
            android:id="@+id/eventRadius"
            android:defaultValue="1"
            android:entries="@array/radius_headings"
            android:entryValues="@array/radius_values"
            android:key="eventRadius"
            android:summary="Set the radius around you in which events will appear"
            android:title="Event Range" />

        <ListPreference
            android:id="@+id/eventRefreshInterval"
            android:defaultValue="5"
            android:entries="@array/refresh_headings"
            android:entryValues="@array/refresh_intervals"
            android:key="eventRefreshInterval"
            android:summary="Set how often you want to grab new events"
            android:title="Refresh" />


    </PreferenceCategory>

    <PreferenceCategory
        android:title="Account Management">
        <EditTextPreference
            android:key="userEmailAddress"
            android:summary="Change your email"
            android:title="Email" />
        <Preference
            android:key="userPassword"
            android:summary="Change your password"
            android:title="Password" />
        <Preference
            android:id="@+id/logout"
            android:key="logout"
            android:title="Logout" />
    </PreferenceCategory>

